
	  <div class="col-md-8 well">
      <p class="lead">Gadget inventory</p>
           <div class="row">
             <div class="col-md-12">
               <%= search_form_for @search do |f| %>
                  <div class="row">
		                <div class="form-group">
		                  <label class="col-md-1 control-label">Company name</label>  
		                  <div class="col-md-6">
		                  &nbsp;&nbsp;<%= f.text_field :company_name_start, required: true, class: 'form-control' %>
		                  </div>
		                </div>
		              </div><br>
		        <%= f.submit "search", class: 'btn' %>
               <%end%>
             </div>       

           </div>  
            <p class="lead">Listing products</p>
          <div class="row">
            <div class="col-md-8">
							<table class="table table-striped table-hover">
							  <thead>
							    <tr>
							      <th>Title</th>
							      <th>Useful_for</th>
							      <th>Company_name</th>
							      <th>Actions</th>
							    </tr>
							  </thead>

							  <tbody>
							    <% @gadgets.each do |gadget| %>
							      <tr>
							        <td><%= gadget.title%></td>
							        <td><%= gadget.useful_for%></td>
							        <td><%=gadget.company_name%></td>
							        <td><%= link_to 'Show', "#" %></td>
							        <td><%= link_to 'Edit',edit_gadget_path(gadget)%></td>
							        <td><%= link_to 'Destroy',gadget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							      </tr>
							    <% end %>
							  </tbody>
							</table>
            </div>
         </div>
      <br>
    </div>

  <div class="col-md-2">
    <%= link_to 'New Product', new_gadget_path,:class=>"btn btn-primary" %>
	</div>
