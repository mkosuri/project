<div class="row">
	 <div class="col-md-2 sidebar-padding">
		 <div class="list-group">
		  <a href="#" class="list-group-item active">
		    Users</a>
		  <a href="#" class="list-group-item">Roles
		  </a>
		  <a href="#" class="list-group-item">Gadget inventory
		  </a>
		</div>
	</div>
  
	  <div class="col-md-8">
      <p class="lead">Gadget inventory</p>  
            <p class="lead">Listing products</p>
          <div class="row">
            <div class="col-md-8">
							<table class="table table-striped table-hover">
							  <thead>
							    <tr>
							      <th>Title</th>
							      <th>Useful_for</th>
							      <th>Company_name</th>
							      <th>Actions</th>
							    </tr>
							  </thead>

							  <tbody>
							    <% @gadgets.each do |gadget| %>
							      <tr>
							        <td><%= gadget.title%></td>
							        <td><%= gadget.useful_for%></td>
							        <td><%=gadget.company_name%></td>
							        <td><%= link_to 'Show', "#" %></td>
							        <td><%= link_to 'Edit',edit_gadget_path(gadget)%></td>
							        <td><%= link_to 'Destroy',gadget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							      </tr>
							    <% end %>
							  </tbody>
							</table>
            </div>
         </div>
      <br>
    </div>

  <div class="col-md-2">
    <%= link_to 'New Product', new_gadget_path,:class=>"btn btn-primary" %>
	</div>
</div>