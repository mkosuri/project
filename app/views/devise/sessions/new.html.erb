
  <div class="row top">

  <fieldset>

   <div class="col-lg-9 col-md-offset-2">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="row col-md-12 well">
       <p class="lead">Member Sign in</p>
      <div class="col-md-offset-1">
		   <div class="row">
			  <div class="form-horizontal">
			    <label for="inputEmail" class="col-lg-2 control-label">Email</label><br/><br/>
			     <div class="col-lg-6">
			      <%= f.email_field :email,:class=>"form-control col-md-offset-2",autofocus: true %></div>
			  </div>
		   </div>
	<br/>

	  <div class="row">
    <div class="form-horizontal">
	    <label for="inputEmail" class="col-lg-2 control-label">Password</label><br/><br/>
	     <div class="col-lg-6">
	      <%= f.password_field :password,:class=>"form-control col-md-offset-2",autocomplete: "off" %></div>
    </div>
   </div>
    <br/>
  </div>
    <div class="row">
    <div class="form-horizontal">
	    <label for="inputEmail" class="col-lg-2 control-label"></label>
	     <div class="col-lg-5 col-md-offset-1">
	       <!-- <button class="btn btn-default">Cancel</button> -->
      
	      <%#= link_to "Cancel","#",:class=>"btn btn-default button" %>
        
	      <%= f.submit "Sign in",class: "btn btn-primary" %>
	      <%= link_to "Sign up",new_user_path,class: "btn btn-default" %>
	      <!--  <button class="btn btn-default">Cancel</button> -->
        <!-- <button type="submit" class="btn btn-primary">Submit</button> --> 
         
	    </div>
    </div>
   </div>
  </div>
	<% end %>
	</div>
</fieldset>
</div>








     

       




































